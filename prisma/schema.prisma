generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String        @id
  username     String
  guildMembers GuildMember[]
}

model Guild {
  id            String         @id
  name          String
  iconURL       String?
  guildMembers  GuildMember[]
  voiceChannels VoiceChannel[]
}

model GuildMember {
  guildID      String
  hoursActive  Float    @default(0)
  joinedAt     DateTime
  userID       String
  nickname     String?
  messagesSent Int      @default(0)
  avatarURL    String?
  user         User     @relation(fields: [userID], references: [id])
  guild        Guild    @relation(fields: [guildID], references: [id])

  @@id([guildID, userID])
  @@index([userID])
  @@index([guildID])
}

model VoiceChannel {
  id          String @id
  name        String
  guildID     String
  connections Int    @default(0)
  guild       Guild  @relation(fields: [guildID], references: [id])

  @@index([guildID])
}
